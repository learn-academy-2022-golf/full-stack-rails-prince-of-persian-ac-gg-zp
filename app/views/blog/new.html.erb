<h3>Add a New Blog Post</h3>
<%= form_with model: @blog do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= @blog.errors[:title] %>
  <br>
  <%= form.label :content %>
  <%= form.text_area :content %>
  <%= @blog.errors[:content] %>
  <br>
  <%= form.submit 'Add Blog' %>
<% end %>
<br>
<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |message| %>
    <h3><%= message %></h3>
  <%end%>
<%end%>
<%= link_to "Back To Home", blogs_path %>

